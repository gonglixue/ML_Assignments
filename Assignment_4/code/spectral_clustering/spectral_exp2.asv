load('TDT2_data', 'fea', 'gnd');

% construct graph
options = [];
options.NeighborMode = 'Supervised';
options.gnd = gnd;
options.bLDA = 1;
W = constructW(fea);

K = length(unique(gnd));
% 把gnd的标签映射为[1,K]
% 子集1最大
gnd = map_label(gnd);


for i = 1:1000
    % spectral clustering
    idx = spectral(W, K);
    mihat_spectral = MutualInfo(idx, gnd);

    % keamns
    idx = kmeans(fea, K);
    mihat_kmeans = MutualInfo(idx, gnd);
end

